<Window x:Class="HoopsFast.AD.AD_BEMTOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoopsFast.AD"
        mc:Ignorable="d"
        Title="AD_BEMTOptions" Height="350" Width="1000"
        Icon="pack://application:,,,/Images/TS3D-Fav.ico">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="lblADSkewMod" Grid.Row="0" Grid.Column="0"/>
        <ComboBox x:Name="cboADSkewMod_value" Grid.Row="0" Grid.Column="1"/>
        <Label x:Name="lblADSkewMod_description" Grid.Row="0" Grid.Column="2"/>

        <Label x:Name="lblADSkewModFactor" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="txtADSkewModFactor_value" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
        <Label x:Name="lblADSkewModFactor_description" Grid.Row="1" Grid.Column="2"/>

        <Label x:Name="lblADTipLoss" Grid.Row="2" Grid.Column="0"/>
        <CheckBox x:Name="chkADTipLoss_value" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label x:Name="lblADTipLoss_description" Grid.Row="2" Grid.Column="2"/>

        <Label x:Name="lblADHubLoss" Grid.Row="3" Grid.Column="0"/>
        <CheckBox x:Name="chkADHubLoss_value" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label x:Name="lblADHubLoss_description" Grid.Row="3" Grid.Column="2"/>

        <Label x:Name="lblADTanInd" Grid.Row="4" Grid.Column="0"/>
        <CheckBox x:Name="chkADTanInd_value" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label x:Name="lblADTanInd_description" Grid.Row="4" Grid.Column="2"/>

        <Label x:Name="lblADAIDrag" Grid.Row="5" Grid.Column="0"/>
        <CheckBox x:Name="chkADAIDrag_value" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label x:Name="lblADAIDrag_description" Grid.Row="5" Grid.Column="2"/>

        <Label x:Name="lblADTIDrag" Grid.Row="6" Grid.Column="0"/>
        <CheckBox x:Name="chkADTIDrag_value" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label x:Name="lblADTIDrag_description" Grid.Row="6" Grid.Column="2"/>

        <Label x:Name="lblADIndToler" Grid.Row="7" Grid.Column="0"/>
        <TextBox x:Name="txtADIndToler_value" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center"/>
        <Label x:Name="lblADIndToler_description" Grid.Row="7" Grid.Column="2"/>

        <Label x:Name="lblADMaxIter" Grid.Row="8" Grid.Column="0"/>
        <TextBox x:Name="txtADMaxIter_value" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center"/>
        <Label x:Name="lblADMaxIter_description" Grid.Row="8" Grid.Column="2"/>


        <Button x:Name="btnOK" Content="OK" Grid.Row="10" Grid.Column="0" Margin="10,0,10,10" Click="btnOK_Click" MaxWidth="100" Height="20"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Row="10" Grid.Column="1" Margin="10,0,10,10" Click="btnCancel_Click" MaxWidth="100" Height="20"/>

    </Grid>
</Window>
